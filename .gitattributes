# Auto detect text files and perform LF normalization
* text=auto eol=lf

# JS/TS files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# CSS files
*.css text eol=lf
*.scss text eol=lf

# JSON files
*.json text eol=lf

# HTML files
*.html text eol=lf

# Markdown files
*.md text eol=lf

# Images should be treated as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Fonts are binary
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.otf binary

# Archives are binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary

# Lock files
package-lock.json text -diff
yarn.lock text -diff
pnpm-lock.yaml text -diff

# Treat all SQL files as text
*.sql text eol=lf

# Docker files
Dockerfile text eol=lf
docker-compose.yml text eol=lf

# Enforce specific line endings for shell scripts
*.sh text eol=lf

# Mark certain files as vendored (not relevant to your core codebase)
node_modules/** linguist-vendored=true
public/vendor/** linguist-vendored=true 