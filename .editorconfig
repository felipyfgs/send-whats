# EditorConfig helps maintain consistent coding styles for multiple developers working on the same project
# https://editorconfig.org/

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx}]
quote_type = single

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JSON files
[*.json]
insert_final_newline = false

# HTML files
[*.{html,htm}]
indent_size = 2

# CSS/SCSS files
[*.{css,scss}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Makefiles use tabs for indentation
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf 